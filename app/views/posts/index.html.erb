<h1>Blog Posts</h1>

<% @posts.each do |p|%>
    <div class="well">
        <h3> <%= p.title %> </h3>
        <p> <%= p.body %> </p>
        <p> <%= p.user&.first_name %> </p> <!--#pakai &. buat safe-->
        <%= link_to "Read More", post_path(p), :class => 'btn btn-default' %>
    </div>
<% end %>